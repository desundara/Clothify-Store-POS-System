<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.controller.inventory.CategoryManagementController">

    <VBox spacing="25.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">

        <!-- Header -->
        <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Category Management" />

        <!-- Main Content -->
        <HBox spacing="30.0" VBox.vgrow="ALWAYS">

            <!-- Left Side - Categories Table -->
            <VBox prefHeight="586.0" prefWidth="658.0" spacing="20.0" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="All Categories" />

                <!-- Search Section -->
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <TextField fx:id="searchField" prefHeight="35.0" prefWidth="400.0" promptText="Search categories..." style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 14;" />
                    <Button fx:id="btnSearch" onAction="#btnSearchOnAction" style="-fx-background-color: #4663AC; -fx-text-fill: white; -fx-pref-height: 35; -fx-background-radius: 5; -fx-font-size: 14;" text="Search" />
                </HBox>

                <!-- Categories Table -->
                <TableView fx:id="categoriesTable" prefHeight="447.0" prefWidth="614.0" style="-fx-background-color: white; -fx-border-radius: 8; -fx-border-color: #e0e0e0;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCategoryName" prefWidth="207.99999690055847" text="Category Name" />
                        <TableColumn fx:id="colDescription" prefWidth="365.59999084472656" text="Description" />
                    </columns>
                </TableView>

                <!-- Empty Table Message -->
                <Label fx:id="lblEmptyTable" style="-fx-text-fill: #95a5a6; -fx-font-style: italic; -fx-alignment: center;" text="No content in table" />
            </VBox>

            <!-- Right Side - Add/Edit Form -->
            <VBox prefHeight="586.0" prefWidth="411.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 3);">
                <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Add/Edit Category" />

                <!-- Category Form -->
                <VBox spacing="20.0">
                    <!-- Category Name -->
                    <VBox spacing="8.0">
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Category Name:" />
                        <TextField fx:id="txtCategoryName" prefHeight="35.0" promptText="Enter category name..." style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 14;" />
                    </VBox>

                    <!-- Description -->
                    <VBox spacing="8.0">
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Description (Optional):" />
                        <TextArea fx:id="txtDescription" prefHeight="100.0" promptText="Enter description..." style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-font-size: 14;" wrapText="true" />
                    </VBox>

                    <!-- Action Buttons -->
                    <HBox alignment="CENTER" spacing="15.0">
                        <Button fx:id="btnSaveCategory" onAction="#btnSaveCategoryOnAction" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-width: 140; -fx-pref-height: 40; -fx-background-radius: 5; -fx-font-size: 14; -fx-font-weight: bold;" text="Save Category" />
                        <Button fx:id="btnCancel" onAction="#btnCancelOnAction" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-width: 100; -fx-pref-height: 40; -fx-background-radius: 5; -fx-font-size: 14;" text="Cancel" />
                    </HBox>
                </VBox>
            </VBox>
        </HBox>

    </VBox>

</AnchorPane>
