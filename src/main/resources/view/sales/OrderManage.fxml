<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="665.0" prefWidth="871.0" spacing="0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.controller.sales.OrderController">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="931.0" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <VBox prefHeight="60.0" prefWidth="696.0">
            <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 24; -fx-font-weight: bold;" text="Order Management" />
            <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14; -fx-padding: 5 0 0 0;" text="Manage and track all customer orders" />
        </VBox>
        <Button fx:id="newOrderButton" onAction="#handleNewOrder" style="-fx-background-color: #4663AC; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 6;" text="+ New Order" />
    </HBox>

    <HBox prefHeight="600.0" prefWidth="982.0" spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">

        <!-- Main Content -->
        <VBox spacing="15" VBox.vgrow="ALWAYS">

            <!-- Filters -->
            <HBox alignment="CENTER_LEFT" prefHeight="66.0" prefWidth="866.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                <TextField fx:id="searchField" prefHeight="26.0" prefWidth="199.0" promptText="Search..." />
                <DatePicker fx:id="startDatePicker" prefHeight="26.0" prefWidth="106.0" promptText="Start Date" />
                <DatePicker fx:id="endDatePicker" prefHeight="26.0" prefWidth="107.0" promptText="End Date" />
                <ComboBox fx:id="statusComboBox" prefWidth="120.0" promptText="Status" />

                <Region prefHeight="26.0" prefWidth="46.0" HBox.hgrow="ALWAYS" />

                <Button fx:id="searchButton" onAction="#handleSearch" prefHeight="26.0" prefWidth="74.0" style="-fx-background-color: #4663AC; -fx-text-fill: white;" text="ðŸ” Search" />
            </HBox>

            <!-- Orders Table -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" VBox.vgrow="ALWAYS">

                <HBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 15 0;">
                    <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 18; -fx-font-weight: bold;" text="All Orders" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label fx:id="ordersCountLabel" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;" text="Showing 0 orders" />
                </HBox>

                <TableView fx:id="ordersTable" prefHeight="400.0" prefWidth="800.0">
                    <columns>
                        <TableColumn fx:id="orderIdColumn" prefWidth="130.0" text="Order ID" />
                        <TableColumn fx:id="dateColumn" prefWidth="138.0" text="Date" />
                        <TableColumn fx:id="totalColumn" prefWidth="182.0" text="Total" />
                        <TableColumn fx:id="employeeIdColumn" prefWidth="142.0" text="Employee ID" />
                        <TableColumn fx:id="statusColumn" prefWidth="199.0" text="Status" />
                    </columns>
                </TableView>

            </VBox>

        </VBox>
    </HBox>
</VBox>
